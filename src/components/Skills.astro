---
import Icon from './Icon.astro';
---
<h1 class="text-3xl font-bold mb-4">Skills</h1>
<section class="box skills mouse-move-smooth glass-border">
	<div class="stack gap-2 lg:gap-4">
		<Icon icon="terminal-window" color="var(--accent-regular)" size="2.5rem" gradient />

        <div>
            <div class="justify-between">
                <div >
                    <Icon icon="php" size='2rem' />
                    Php
                </div>
                <span class="text-white font-bold mb-2">100%</span>
            </div>
            <div class="custom-progress" style="margin-top: 10px;" >
                <div class="progress-php" style="--progress-width: 100%;"></div>
            </div>
        </div>

        <div>
            <div class="justify-between">
